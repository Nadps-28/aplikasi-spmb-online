# Konfigurasi untuk notifikasi sungguhan

# EMAIL (Gmail SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-gmail@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-gmail@gmail.com

# WhatsApp (perlu API seperti Twilio/Fonnte)
WHATSAPP_API_URL=https://api.fonnte.com/send
WHATSAPP_TOKEN=your-whatsapp-token

# SMS (perlu provider seperti Twilio)
SMS_API_URL=https://api.twilio.com/2010-04-01/Accounts/your-sid/Messages.json
SMS_SID=your-twilio-sid
SMS_TOKEN=your-twilio-token
SMS_FROM=+1234567890